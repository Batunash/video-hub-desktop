{
  "name": "zenith-stream-desktop",
  "productName": "Zenith Stream",
  "version": "1.0.0",
  "description": "Premium Video Streaming Experience",
  "main": "main/main.js",
  "author": {
    "name": "Batunash",
    "email": "okullubatuhan@gmail.com"
  },
  "license": "ISC",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "start": "electron .",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder -wjl"
  },
  "build": {
    "appId": "com.batunash.zenithstream",
    "productName": "Zenith Stream",
    "copyright": "Copyright Â© 2025 batunash",
    "directories": {
      "output": "release"
    },
    "files": [
      "package.json",
      ".env",
      "dist/**/*",
      "main/**/*",
      "backend/**/*",
      "config/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Zenith Stream",
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Video",
      "icon": "assets/icon.png",
      "artifactName": "${name}-${version}-Linux-${arch}.${ext}",
      "executableName": "zenith-stream-desktop",
      "synopsis": "Premium Video Streaming App"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png",
      "category": "public.app-category.entertainment",
      "artifactName": "${productName}-${version}-Mac.${ext}"
    }
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "i18next": "^25.6.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-dropzone": "^14.3.8",
    "react-i18next": "^16.3.5",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.6",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "39.2.1",
    "electron-builder": "^26.0.12",
    "vite": "^7.2.2"
  }
}