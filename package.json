{
  "name": "video-hub-desktop",
  "version": "1.0.0",
  "description": "My Home Media Server",
  "main": "main/main.js",
  "author": "Batu",
  "license": "ISC",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "start": "electron .",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "rebuild": "electron-rebuild"
  },
  "build": {
    "appId": "com.batu.videohub",
    "productName": "Video Hub",
    "directories": {
      "output": "release"
    },
    "files": [
      "package.json",
      ".env",
      "dist/**/*",
      "main/**/*",
      "backend/**/*",
      "config/**/*"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Video"
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "i18next": "^25.6.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-dropzone": "^14.3.8",
    "react-i18next": "^16.3.5",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "vite": "^7.2.2"
  }
}
